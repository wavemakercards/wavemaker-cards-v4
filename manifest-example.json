  "shortcuts": [
    {
      "name": "New Story",
      "short_name": "New",
      "description": "Start a new writing project",
      "url": "./?action=new-story",
      "icons": [
        {
          "src": "./img/icons/shortcut-new.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Mind Map",
      "short_name": "Mind Map",
      "description": "Open mind mapping tool",
      "url": "./?tool=mindmap",
      "icons": [
        {
          "src": "./img/icons/shortcut-mindmap.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Writer Mode",
      "short_name": "Write",
      "description": "Open distraction-free writing mode",
      "url": "./?mode=writer",
      "icons": [
        {
          "src": "./img/icons/shortcut-write.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Timeline",
      "short_name": "Timeline",
      "description": "Open timeline planning tool",
      "url": "./?tool=timeline",
      "icons": [
        {
          "src": "./img/icons/shortcut-timeline.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "share_target": {
    "action": "./share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "documents",
          "accept": [
            "text/plain",
            "text/markdown",
            ".txt",
            ".md",
            ".rtf"
          ]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "wavemaker",
      "url": "./?protocol=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "./file-handler",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/rtf": [".rtf"]
      }
    }
  ],
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.wavemakercards.app",
      "id": "com.wavemakercards.app"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/app/wavemaker-cards/id123456789"
    }
  ],
  
  "prefer_related_applications": false,
  
